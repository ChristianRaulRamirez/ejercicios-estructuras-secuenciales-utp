	Escribir "Ingrese el primer valor : "
	Leer valor1
	
	Escribir "Ingrese el segundo valor : "
	Leer valor2
	
	sumaValores <- valor1 + valor2;
	productoValores <- valor1*valor2;
	
	Escribir "La suma de los valores es ", sumaValores
	Escribir "El producto de los valores es ", productoValores
